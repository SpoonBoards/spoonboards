<p id="notice"><%= notice %></p>

<h1>Listing Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Cart</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Design name</th>
      <th>Design</th>
      <th>Spoonflower</th>
      <th>Thumbnail url</th>
      <th>Fabric type</th>
      <th>Purchased</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.cart_id %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= cart_item.design_name %></td>
        <td><%= cart_item.design_id %></td>
        <td><%= cart_item.spoonflower_id %></td>
        <td><%= cart_item.thumbnail_url %></td>
        <td><%= cart_item.fabric_type %></td>
        <td><%= cart_item.purchased %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart item', new_cart_item_path %>
