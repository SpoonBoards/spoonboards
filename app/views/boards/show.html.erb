          <div id="error_explanation">
            <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>
            <ul>
            <% @board.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.hidden_field :user_id, value: session[:user_id] %>
        <div>
        <div class="field">
          <%= f.label :marked_private %><br>
          <%= f.check_box :marked_private %>
        <div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    <% end %>

