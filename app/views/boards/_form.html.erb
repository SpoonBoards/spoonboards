<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
      <div>Please log in first to create a board.</div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, value: session[:user_id] %>
  <div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
