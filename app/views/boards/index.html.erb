<p id="notice"><%= notice %></p>

<h1>My SpoonBoards</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Collection Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td> &nbsp; <%= board.name %></td>
        <td> &nbsp; <%= link_to 'Show', board %></td>
        <td> &nbsp; <%= link_to 'Edit', edit_board_path(board) %></td>
        <td> &nbsp; <%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Search the Marketplace</p>
<%= form_tag searches_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<%= link_to 'Back to Create a New Board', new_board_path %>
